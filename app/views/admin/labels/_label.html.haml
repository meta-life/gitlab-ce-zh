%li{ id: dom_id(label) }
  .label-row
    = render_colored_label(label, tooltip: false)
    = markdown_field(label, :description)
    .pull-right
      = link_to '编辑', edit_admin_label_path(label), class: 'btn btn-sm'
      = link_to '删除', admin_label_path(label), class: 'btn btn-sm btn-remove remove-row', method: :delete, remote: true, data: {confirm: "确定要删除此标记？"}
