.note-edit-form
  = form_tag '#', method: :put, class: 'edit-note common-note-form js-quick-submit' do
    = hidden_field_tag :target_id, '', class: 'js-form-target-id'
    = hidden_field_tag :target_type, '', class: 'js-form-target-type'
    = render layout: 'projects/md_preview', locals: { url: preview_markdown_path(project), referenced_users: true } do
      = render 'projects/zen', attr: 'note[note]', classes: 'note-textarea js-note-text js-task-list-field', placeholder: "撰写评论或拖放文件到此处..."
      = render 'shared/notes/hints'

    .note-form-actions.clearfix
      .settings-message.note-edit-warning.js-finish-edit-warning
        请先完成此评论的编辑！
      = submit_tag '保存评论', class: 'btn btn-nr btn-save js-comment-save-button'
      %button.btn.btn-nr.btn-cancel.note-edit-cancel{ type: 'button' }
        取消
