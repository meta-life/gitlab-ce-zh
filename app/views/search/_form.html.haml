= form_tag search_path, method: :get, class: 'js-search-form' do |f|
  = hidden_field_tag :snippets, params[:snippets]
  = hidden_field_tag :scope, params[:scope]

  .search-holder
    .search-field-holder
      = search_field_tag :search, params[:search], placeholder: "搜索项目、问题等", class: "form-control search-text-input js-search-input", id: "dashboard_search", autofocus: true, spellcheck: false
      = icon("search", class: "search-icon")
      %button.search-clear.js-search-clear{ class: ("hidden" if !params[:search].present?), type: "button", tabindex: "-1" }
        = icon("times-circle")
        %span.sr-only
          清除搜索
    - unless params[:snippets].eql? 'true'
      = render 'filter'
    = button_tag "搜索", class: "btn btn-success btn-search"
